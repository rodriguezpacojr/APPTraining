<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.training.training.Employee">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*">

        <TextView
            android:id="@+id/txtEmployee"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Employee"
            android:textSize="25dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:inputType="text"/>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/edtnameEmp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textAlignment="center"
                android:layout_marginTop="19dp"
                android:inputType="text" />

            <EditText
                android:id="@+id/edtlastName"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Last Name"
                android:textAlignment="center"
                android:layout_marginTop="19dp"
                android:inputType="text" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/edtlastNameMom"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Last Name Mom"
                android:textAlignment="center"
                android:layout_marginTop="19dp"
                android:inputType="text"/>
            <EditText
                android:id="@+id/edtbornDate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Born Date"
                android:textAlignment="center"
                android:layout_marginTop="19dp"
                android:inputType="text"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <EditText
                android:id="@+id/edtemailEmp"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:textAlignment="center"
                android:layout_marginTop="19dp"
                android:inputType="text"/>

            <EditText
                android:id="@+id/edtphone"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:textAlignment="center"
                android:layout_marginTop="19dp"
                android:layout_below="@+id/edtemailEmp"
                android:layout_alignLeft="@+id/edtemailEmp"
                android:layout_alignStart="@+id/edtemailEmp"
                android:inputType="text"/>
        </TableRow>

        <TextView
            android:id="@+id/txtGender"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Gender"
            android:textAlignment="center"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/edtrfc"
            android:layout_alignLeft="@+id/edtrfc"
            android:layout_alignStart="@+id/edtrfc" />

        <Spinner
            android:id="@+id/spnGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtGender"
            android:layout_alignLeft="@+id/txtGender"
            android:layout_alignEnd="@+id/txtGender"
            android:layout_alignStart="@+id/txtGender"
            />

        <TextView
            android:id="@+id/txtJob"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="Job"
            android:textAlignment="center"
            android:layout_marginTop="19dp"
            android:layout_below="@+id/spnGender"
            android:layout_alignLeft="@+id/spnGender"
            android:layout_alignStart="@+id/spnGender" />

        <Spinner
            android:id="@+id/spnJob"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/txtJob"
            android:layout_alignLeft="@+id/txtJob"
            android:layout_alignEnd="@+id/txtJob"
            android:layout_alignStart="@+id/txtJob"
            />

        <Button
            android:id="@+id/btnAcept"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/spnJob"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Acept"/>

        <Button
            android:id="@+id/btnaboutOf"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/btnAcept"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Abut Of"/>
    </TableLayout>
</ScrollView>